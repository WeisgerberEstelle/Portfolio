{% extends 'base.html.twig' %}

{% block title %}Experience{% endblock %}

{% block body %}
    <h1>Experience</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ experience.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ experience.title }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ experience.Role }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ experience.description }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ experience.startDate ? experience.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ experience.endDate ? experience.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ experience.place }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_experience_index') }}">back to list</a>

    <a href="{{ path('admin_experience_edit', {'id': experience.id}) }}">edit</a>

    {{ include('admin_experience/_delete_form.html.twig') }}
{% endblock %}
