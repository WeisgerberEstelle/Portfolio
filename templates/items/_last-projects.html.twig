<section class="container d-flex flex-column align-items-center">
	<img src="{{ asset('build/images/lampe2.svg') }}" alt="lampe" class="mx-auto">
	<h3 class="text-center fs-2 mt-3 mb-5">Des projets</h3>
	{% for project in projects %}
		<div class="d-flex flex-column-reverse flex-lg-row container justify-content-lg-around project my-5">
			<div class="d-flex flex-column justify-content-between align-items-start">
				<div class="d-flex flex-column align-items-start justify-content-start">
					<h4 class="text-secondary">{{project.title}}</h4>
					<p class="date my-2">{{project.startDate|date('F Y') }}
						/
						{{project.endDate|date('F Y') }}
					</p>
					<div class="technologies my-3">
						{% for technology in project.technologies %}
							<span class="btn rounded-pill text-light border-light m-2">{{ technology.name}}</span>
						{% endfor %}
					</div>
					<div class="d-flex align-items-center ">
						<a href="{{project.link}}" class="btn btn-primary rounded-pill link me-3 my-2 px-3">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#75DAC0" class="bi bi-box-arrow-up-right mb-2 me-1" viewbox="0 0 16 16">
								<path fill-rule="evenodd" d="M8.636 3.5a.5.5 0 0 0-.5-.5H1.5A1.5 1.5 0 0 0 0 4.5v10A1.5 1.5 0 0 0 1.5 16h10a1.5 1.5 0 0 0 1.5-1.5V7.864a.5.5 0 0 0-1 0V14.5a.5.5 0 0 1-.5.5h-10a.5.5 0 0 1-.5-.5v-10a.5.5 0 0 1 .5-.5h6.636a.5.5 0 0 0 .5-.5z"/>
								<path fill-rule="evenodd" d="M16 .5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h3.793L6.146 9.146a.5.5 0 1 0 .708.708L15 1.707V5.5a.5.5 0 0 0 1 0v-5z"/>
							</svg>
							Site
						</a>
						<a href="/projets#{{project.title}}" class="btn btn-primary rounded-pill link">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#75DAC0" class="bi bi-plus-lg mb-1" viewbox="0 0 16 16">
								<path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"/>
							</svg>
							Projet
						</a>
					</div>

				</div>
			</div>
			{% if project.image %}
				<img src="{{ vich_uploader_asset(project) }}" alt="photo" class="photo ms-lg-5 mb-5 mb-lg-0 mt-5 mt-lg-0">
			{% else %}
				<img src="{{ asset('build/images/tasse2.svg') }}" alt="photo" class="photo ms-lg-5 mt-5 mt-md-0 ">
			{% endif %}
		</div>
		<img src="{{ asset('build/images/separator2.svg') }}" alt="separator" class="my-5">
	{% endfor %}
</section>
