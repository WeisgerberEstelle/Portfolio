<section class="container d-flex flex-column align-items-center">
	<img src="{{ asset('build/images/lampe2.svg') }}" alt="lampe" class="mx-auto">
	<h3 class="text-center fs-2 mt-3 mb-5">Des projets</h3>
	{% for project in projects %}
		<div class="d-flex container row my-5">
			<div class="project col-md-4 offset-md-1 d-flex flex-column align-items-start justify-content-between">
				<h4 class="text-secondary">{{project.title}}</h4>
				<p class="date">{{project.startDate|date('F Y') }}
					/
					{{project.endDate|date('F Y') }}
				</p>
				<a href="" class="btn btn-primary rounded-circle link">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#75DAC0" class="bi bi-plus-lg" viewbox="0 0 16 16">
						<path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"/>
					</svg>
				</a>
			</div>
			<img src="{{ asset('build/images/placeholder.png') }}" alt="photo" class="photo mt-5 mt-md-0 col-md-4 offset-md-2">
		</div>
		<img src="{{ asset('build/images/separator2.svg') }}" alt="separator" class="my-5" >
	{% endfor %}
</section>
