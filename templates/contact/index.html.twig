{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}
{% block stylesheets %}{{ encore_entry_link_tags('contact') }}{% endblock %}
{% block body %}
	<main class="container my-5">
		<h1 class="text-center mt-5 ">
			Me contacter
		</h1>

		<div class="row ">
			<div class=" col-md-4 offset-md-1 d-flex flex-column justify-content-start align-items-center mt-5">
				<img class=" w-50" src="{{ asset('build/images/logo.png') }}" alt="logo"/>
                <h2 class="text-center mt-5">Une question, Un projet?</h2>
                <h3 class="text-center mt-3">N' hésitez pas à me contacter !</h3>
			</div>

			<div class="col-md-4 offset-md-2 mt-5 fs-4 ">
				{% for message in app.flashes('success') %}
					<div class="alert alert-success">
						{{ message }}
					</div>
				{% endfor %}
				<div class=" contact_form  text-info fs-4">
					{{ form_start(form) }}
					{{ form_rest(form) }}
				</div>
				<button class="btn btn-primary col-sm-4 offset-sm-4 link contact-btn rounded-pill my-5 fs-5 px-3 py-2">Envoyer</button>

				{{ form_end(form) }}
			</div>
		</div>
	</main>
{% endblock %}
